<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/changedesk_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ab_transparent_dark_holo"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/desk_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/changedesk_number"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/desk_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/changedesk_type"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</LinearLayout>